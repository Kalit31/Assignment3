<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HelpFrag">

    <Button
        android:id="@+id/help_butt"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="123dp"
        android:layout_marginRight="123dp"
        android:background="@color/colorPrimaryLight"
        android:fontFamily="@font/montserrat"
        android:text="Call for Help"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:typeface="normal" />

    <Button
        android:id="@+id/chat_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="201dp"
        android:layout_marginRight="201dp"
        android:background="@color/colorPrimaryLight"
        android:fontFamily="@font/montserrat"
        android:text="Start Chat"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/montserrat"
        android:text="Help"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:fontFamily="@font/montserrat"
        android:text="If facing any difficulty while using the app, you may contact by pressing below."
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="392dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:fontFamily="@font/montserrat"
        android:text="You may also contact our online helpers.To start chatting with them, press below."
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:typeface="normal" />

</RelativeLayout>